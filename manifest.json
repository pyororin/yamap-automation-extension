{
  "manifest_version": 3,
  "name": "YAMAP Automation Extension",
  "version": "1.0",
  "description": "A Chrome extension to automate specific routine tasks on YAMAP.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://yamap.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://yamap.com/*"],
      "js": ["content.js"]
    }
  ]
}